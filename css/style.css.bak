body {
  background-color: #f8f8f8;
  font-family: 'Segoe UI', sans-serif;
  color: #333;
  margin: 0;
}

header {
  background: #333;
  color: white;
  padding: 1.5em;
  text-align: center;
}

header nav {
  margin-top: 15px;
}

header nav a {
  color: white;
  text-decoration: none;
  margin: 0 10px;
  font-size: 1.1rem;
}

header nav a:hover {
  font-weight: bold;
  color: #ff6f61;
}

.slideshow-container {
  position: relative;
  max-width: 100%;
  margin: auto;
  overflow: hidden;
}

.slide {
  display: none;
  width: 100%;
  height: auto;
}

.slide img,
.slide video {
  width: 100%;
  aspect-ratio: 16 / 9;
  object-fit: cover;
  border-radius: 10px;
  display: block;
}

.prev, .next {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  font-size: 18px;
  padding: 16px;
  cursor: pointer;
  border: none;
  z-index: 1;
}

.prev { left: 0; }
.next { right: 0; }

.dots-container {
  text-align: center;
  padding: 10px 0;
}

.dot {
  height: 10px;
  width: 10px;
  margin: 0 4px;
  background-color: #bbb;
  border-radius: 50%;
  display: inline-block;
  transition: background-color 0.6s ease;
  cursor: pointer;
}

.active {
  background-color: #ff6f61;
}

.split-screen {
  display: flex;
  justify-content: space-between;
  margin-top: 2em;
  padding: 0 2em;
}

.left, .right {
  width: 48%;
  background-color: white;
  padding: 20px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.left h2 {
  font-size: 2rem;
}

.left p {
  font-size: 1.2rem;
  line-height: 1.6;
}

.right img {
  width: 100%;
  margin-bottom: 20px;
  border-radius: 10px;
}

button {
  padding: 12px 25px;
  background-color: #333;
  color: white;
  border: none;
  cursor: pointer;
  border-radius: 5px;
  margin-top: 15px;
}

button:hover {
  background-color: #ff6f61;
}

body.index-page {
  background: url('../images/main-bg.jpg') no-repeat center center fixed;
  background-size: cover;
  color: #fff;
}
